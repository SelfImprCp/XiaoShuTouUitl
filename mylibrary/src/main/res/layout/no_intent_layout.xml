    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:text="最遥远的距离就是没网络,请检查是否连网!"
        android:layout_marginLeft="15dp"
        android:textColor="#6f6d6e"
